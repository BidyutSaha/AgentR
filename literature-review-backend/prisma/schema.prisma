// ============================================================================
// LLM MODEL PRICING TABLE (for cost calculation)
// ============================================================================

model LlmModelPricing {
  id          String   @id @default(uuid())
  
  // Model Identification
  modelName   String   @map("model_name") // e.g., 'gpt-4o-mini', 'gpt-4', 'gpt-3.5-turbo'
  provider    String   @default("openai") // 'openai', 'anthropic', 'groq', etc.
  
  // Pricing Tier (for providers that support multiple tiers like OpenAI)
  pricingTier String   @default("standard") @map("pricing_tier") // 'batch', 'flex', 'standard', 'priority'
  
  // Pricing (in USD cents per million tokens, stored as integers to avoid floating point issues)
  inputUsdCentsPerMillionTokens        Int  @map("input_usd_cents_per_million_tokens") // e.g., 150000 = $1.50 per 1M tokens
  outputUsdCentsPerMillionTokens       Int  @map("output_usd_cents_per_million_tokens") // e.g., 600000 = $6.00 per 1M tokens
  cachedInputUsdCentsPerMillionTokens  Int? @map("cached_input_usd_cents_per_million_tokens") // For models with prompt caching
  
  // Versioning and Status
  isActive    Boolean  @default(true) @map("is_active") // Only active pricing is used for calculations
  isLatest    Boolean  @default(true) @map("is_latest") // Mark the latest pricing for each model
  
  // Metadata
  description String?  @db.Text // Optional description (e.g., "GPT-4 Turbo with vision")
  notes       String?  @db.Text // Admin notes about pricing changes
  
  // Timestamps
  effectiveFrom DateTime @default(now()) @map("effective_from") // When this pricing becomes effective
  effectiveTo   DateTime? @map("effective_to") // When this pricing expires (null = current)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  
  // Indexes for efficient querying
  @@unique([modelName, provider, pricingTier, effectiveFrom]) // Prevent duplicate pricing
  @@index([modelName, provider, pricingTier, isLatest]) // Quick lookup of latest pricing
  @@index([isActive, isLatest]) // Query active and latest prices
  @@index([effectiveFrom]) // Time-based queries
  
  @@map("llm_model_pricing")
}

// ============================================================================
// LLM USAGE LOGS TABLE (for billing and tracking)
// ============================================================================

model LlmUsageLog {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  projectId String?  @map("project_id") // Optional: some calls may not be project-specific
  paperId   String?  @map("paper_id") // Optional: if call is related to a specific paper
  
  // LLM Call Details
  stage           String   // 'intent', 'queries', 'score', etc.
  modelName       String   @map("model_name") // e.g., 'gpt-4o-mini', 'gpt-4'
  provider        String   @default("openai") // 'openai', 'anthropic', etc.
  
  // Token Usage
  inputTokens     Int      @map("input_tokens")
  outputTokens    Int      @map("output_tokens")
  totalTokens     Int      @map("total_tokens")
  
  // Cost Tracking (in USD, stored as cents to avoid floating point issues)
  inputCostCents  Int?     @map("input_cost_cents") // Cost in cents (e.g., 150 = $1.50)
  outputCostCents Int?     @map("output_cost_cents")
  totalCostCents  Int?     @map("total_cost_cents")
  
  // Performance Metrics
  durationMs      Int?     @map("duration_ms") // Time taken for API call in milliseconds
  
  // Request/Response Metadata
  requestId       String?  @map("request_id") // OpenAI request ID or similar
  status          String   @default("success") // 'success', 'error', 'timeout'
  errorMessage    String?  @map("error_message") @db.Text
  
  // Additional Context
  metadata        String?  @db.Text // JSON string for any additional data
  
  createdAt       DateTime @default(now()) @map("created_at")
  
  // Relations
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  project UserProject? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  paper   CandidatePaper? @relation(fields: [paperId], references: [id], onDelete: SetNull)
  
  // Indexes for efficient querying
  @@index([userId, createdAt]) // Query user's usage over time
  @@index([projectId, createdAt]) // Query project's usage
  @@index([stage, createdAt]) // Query by stage
  @@index([createdAt]) // Time-based queries for billing periods
  
  @@map("llm_usage_logs")
}

